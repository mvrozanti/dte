# Tokens

t_COLON = r':'
t_SEMICOLON = r';'
t_PERIOD = r'\.'
t_PLUS = r'\+'
t_MINUS = r'-'
t_EQUALS = r'='
t_LPAREN = r'\('
t_RPAREN = r'\)'
t_GT = r'>'
